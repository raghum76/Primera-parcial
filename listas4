promat2m(){
  var tmp = this.inicio;
  var txt ="";
  var suma_calificiones = 0;
  var m=0;
  var promedio=0;


  while (tmp != null)
  {
      if (tmp.sexo ==0 )
      {
          suma_calificiones+= tmp.calificaciones[1];
           m++;
           promedio=suma_calificaciones/m;
      }
      tmp=tmp.siguiente;
}
return promedio;
}
promat2h(){
  var tmp = this.inicio;
  var txt ="";
  var suma_calificiones = 0;
  var h=0;
  var promedio=0;

  while (tmp != null)
  {
      if (tmp.sexo ==1 )
      {
          suma_calificiones+= tmp.calificaciones[1];
           h++;
           promedio=suma_calificaciones/h;
      }
      tmp=tmp.siguiente;
}
return promedio;
}
respuestaincisoc(){
  var txt=" ";
  txt+="\nMujeres: " + this.promat2m() + "\nHombres: " + this.promat2h();
  return txt;
}
